<div class="container">
  <div>
    <% @users.each do |user|%>
    <%=link_to "#{user.email}프로필", user_path(id: user.id)%>  
    <%end%>
  </div>
  
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">제목</th>
        <th scope="col">작성자</th>
        <th scope="col">조회수</th>
        <th scope="col"> </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each_with_index do |post, index|%>
      <tr>
        <th scope="row"><%=index + 1%></th>
        <td><%=post.title%></td>
        <% if post.user %>
        <td><%=post.user.email%></td>
        <% else %>
        <td>신원 미상</td>
        <% end %>
        <td><%=post.hit%></td>
        <td><%=link_to "상세보기", post_path(post), class:"btn btn-primary"%></td>
      </tr>
      <%end %>

    </tbody>
  </table>
  <hr/>
  <%= paginate @posts %>
</div>